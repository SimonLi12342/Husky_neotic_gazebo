<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="actor_minimal_world">

    <!-- Required basics -->

    <!-- Minimal walking human -->
    <actor name="test_human">
      <pose>0 0 0.01 0 0 0</pose>

      <skin>
        <filename>model://walking_actor/meshes/walk.dae</filename>
        <scale>1.0</scale>
      </skin>

      <animation name="walking">
        <filename>model://walking_actor/meshes/walk.dae</filename>
        <scale>1.0</scale>
        <interpolate_x>true</interpolate_x>
      </animation>

      <script>
        <loop>true</loop>
        <auto_start>true</auto_start>

        <trajectory id="0" type="walking">
          <waypoint>
            <time>0</time>
            <pose>-2 0 0.01 0 0 0</pose>
          </waypoint>

          <waypoint>
            <time>5</time>
            <pose> 2 0 0.01 0 0 0</pose>
          </waypoint>

          <waypoint>
            <time>10</time>
            <pose>-2 0 0.01 0 0 3.14159</pose>
          </waypoint>
        </trajectory>
      </script>
    </actor>

  </world>
</sdf>
